<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Activity"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:textSize="40sp"

        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/OpenSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenThirdActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenFourthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fourth Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenFifthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fifth Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenSixthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sixth Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenSeventhActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seventh Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenEighthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eighth Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenNinthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ninth Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenTenthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenth Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/OpenEleventhActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eleventh Activity"
        android:textSize="20sp"
        android:layout_marginTop="15dp"></Button>


</LinearLayout>